{
  "name": "orcarunner",
  "version": "0.0.12",
  "description": "Library of utility methods for managing and running orchestrations",
  "author": "Hamada",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist",
    "package.json",
    "README.md"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "start": "npx src/index.ts",
    "build": "rollup -c",
    "package": "npm run build && npm publish",
    "pack": "npm pack",
    "clean": "rm -rf dist",
    "reset": "rm -rf node_modules package.lock.json"
  },
  "keywords": [
    "workflow",
    "orchestration",
    "typescript",
    "automation"
  ],
  "license": "ISC",
  "dependencies": {
    "chalk": "^5.6.2",
    "child_process": "^1.0.2",
    "crypto": "^1.0.1",
    "fs": "^0.0.1-security",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.0",
    "path": "^0.12.7",
    "rollup": "^4.52.5",
    "rollup-plugin-typescript2": "^0.36.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3"
  }
}
